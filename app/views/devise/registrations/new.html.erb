
<div class="h-100 d-flex align-items-center justify-content-center">
  <div class="login d-flex align-items-center flex-column">
    <span class="login__heading mb-2"> Fotobook Signup
    </span>
    <div class="login__social d-flex justify-content-around w-100 my-3">
        <%= image_tag(asset_path('google.png'),class:'login__social-fb social-icon') %>
        <%= image_tag(asset_path('facebook.png'),class:'login__social-fb social-icon') %>
        <%= image_tag(asset_path('twitter.png'),class:'login__social-fb social-icon') %>
    </div>
  <div class="register__content w-100">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html:{class:'d-flex align-items-center flex-column mt-4 needs-validation', data: { controller: 'validate' }}) do |f| %>
      <!--<%= render "devise/shared/error_messages", resource: resource %>-->
          <div class="w-85 d-flex justify-content-between">
            <div class="w-45">
              <div class="form-outline mb-2">
                <label class="form-label" for="validationCustom01">First Name</label>
                <%= f.text_field :fname,class:"form-control",id:"validationCustom01", autofocus: true, placeholder:"First Name",required: true%>
                <div class="invalid-feedback">
                  Please type first name.
                </div>
              </div>
            </div>
            <div class="w-45">
                <div class="form-outline mb-2">
                  <label class="form-label" for="form2Example1">Last Name</label>
                  <%= f.text_field :lname,class:"form-control", placeholder:"Last Name",required: true%>
                </div>
            </div>
          </div>

         

     
          
          <div class="form-outline mb-2 w-85">
            <label class="form-label" for="form2Example1">Email</label>
            <%= f.email_field :email,class:"form-control",placeholder:'Email', autocomplete: "email",required: true %>
          </div>
          <div class="form-outline mb-2 w-85">
            <label class="form-label" for="form2Example1">New Password</label>
            <%= f.password_field :password,class:"form-control",placeholder:'New Password', autocomplete: "new-password",required: true %>
          </div>

          <div class="form-outline mb-2 w-85">
            <label class="form-label" for="form2Example1">Password Confirmation</label>
            <%= f.password_field :password_confirmation,class:'form-control',placeholder:'Password Confirmation', autocomplete: "new-password",required: true %>
          </div>


          <%= f.text_field :user_type,class:"form-control",placeholder:'User type', value: 'client' , type: 'hidden'%>
          <%= f.text_field :age,class:"form-control",placeholder:'User type', value:20, type: 'hidden' %>

          <div class="actions">
            <%= f.submit "Sign up", class:'btn btn-primary btn-login border-0 mt-3' %>
          </div>
    <% end %>
  </div>
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", login_path, class:'text-decoration-none mt-4' %><br />
  <% end %>



  

