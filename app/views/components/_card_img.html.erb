<div class="col-xl-6 col-12 d-flex justify-content-center">
    <div class="cardImg d-none d-lg-block">
        <div class="row h-100 w-100 no-margin">
            <div class="cardImg__left h-100 m-0 p-0 col-5" data-bs-target="#photo_<%=photo.id%>" data-bs-toggle="modal"  > 
                <%= image_tag(photo.source.url(:thumb2),class:'cardIMg__left-img h-100 w-100') %>
            </div>
            <div class="cardImg__right  ps-4 position-relative col-7 pe-0">
                <div class="cardImg__right-account my-2 d-flex justify-content-between align-items-center">
                    <%= link_to photos_user_path(user), class: 'text-decoration-none d-flex align-items-center' do  %>
                        <% if user.avatar.present? %> 
                            <%= image_tag(user.avatar.url(:thumb1), class: 'cardImg__right-account__avatar rounded-circle' )  %>
                        <%else%>
                        <%= image_tag('data:image/jpeg;base64,', class: 'cardImg__right-account__avatar rounded-circle') %>
                        <%end%>
                        <span class="cardImg__right-account__name ms-2 fw-bold"><%= user.fullname %></span>
                    <%end%>
                    

                    <% if params[:action]== 'discover' && is_follow %>
                        <button class="cardImg__btn-following">following</button>
                    <%elsif params[:action]== 'discover' && !is_follow %>
                        <%= button_to 'follow', follows_path(user,'falsePhoto'),method: :post , class: 'cardImg__btn-follow  text-center' %>
                    <%end%>
                </div>
                <div class="cardImg__right-heading text-dark fw-bold ">
                    <%= photo.title %>
                </div>
                <div class="cardImg__right-text mt-2">
                    <%= photo.description %>
                </div>
                <div class="cardImg__right-footer position-absolute bottom-0 d-flex align-items-center justify-content-between" >
                    <% if user_signed_in? and !is_like %>
                        <%= turbo_frame_tag "like_count_photo_#{photo.id}" do %>
                            <%= button_to like_photo_path(photo,'true'),class: 'cardImg__right-footer__btn border-0 bg-transparent ' do %>
                                <i class="heart-icon dislike fa-solid fa-heart "></i>
                                <span><%= like_size %></span>
                            <%end%>
                        <%end%>
                    <%elsif user_signed_in? and is_like %>
                        <%= turbo_frame_tag "dislike_count_photo_#{photo.id}" do %>
                            <%= button_to like_photo_path(photo,'false'), class: 'cardImg__right-footer__btn border-0 bg-transparent' do %>
                                <i class="heart-icon like fa-solid fa-heart"></i>
                                <span><%= like_size %></span>
                            <%end%>
                        <%end%>
                    <%else%>
                        <div class="cardImg__right-footer__btn border-0 bg-transparent">
                            <i class="heart-icon dislike fa-solid fa-heart "></i>
                            <span><%= like_size %></span>
                        </div>
                    <%end%>
                    <span class="cardImg__right-footer__time"><%= photo.created_at %></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Card -->
    <div class="card d-block d-lg-none my-3">

        <!-- Card image -->
        
        <div class="card-img-top" data-bs-target="#photo_<%=photo.id%>" data-bs-toggle="modal"  > 
            <%= image_tag(photo.source.url(:thumb2),class:'cardIMg__left-img h-100 w-100') %>
        </div>

        <!-- Card content -->
        <div class="card-body">

            <!-- Title -->
            <div class="card-body__heading d-flex align-items-center">
                <div class="card-user w-50">
                    <%= link_to photos_user_path(user), class: 'text-decoration-none d-flex align-items-center' do  %>
                        <% if user.avatar.present? %> 
                            <%= image_tag(user.avatar.url(:thumb1), class: 'cardImg__right-account__avatar rounded-circle' )  %>
                        <%else%>
                        <%= image_tag('data:image/jpeg;base64,', class: 'cardImg__right-account__avatar rounded-circle') %>
                        <%end%>
                        <span class="cardImg__right-account__name ms-2 fw-bold"><%= user.fullname %></span>
                    <%end%>
                    

                    <% if params[:action]== 'discover' && is_follow %>
                        <button class="cardImg__btn-following mt-1">following</button>
                    <%elsif params[:action]== 'discover' && !is_follow %>
                        <%= button_to 'follow', follows_path(user,'falsePhoto'),method: :post , class: 'cardImg__btn-follow  text-center mt-1' %>
                    <%end%>
                </div>
                <h4 class="card-title w-50 mt-1"><%= photo.title %></h4>

            </div>

   
            <!-- Text -->
            <p class="card-text my-2"><%= photo.description %></p>
            <!-- Button -->
            <div class="cardImg__right-footer position-absolute bottom-0 d-flex align-items-center justify-content-between my-2" >
                    <% if user_signed_in? and !is_like %>
                        <%= turbo_frame_tag "like_count_photo_#{photo.id}" do %>
                            <%= button_to like_photo_path(photo,'true'),class: 'cardImg__right-footer__btn border-0 bg-transparent ' do %>
                                <i class="heart-icon dislike fa-solid fa-heart "></i>
                                <span><%= like_size %></span>
                            <%end%>
                        <%end%>
                    <%elsif user_signed_in? and is_like %>
                        <%= turbo_frame_tag "dislike_count_photo_#{photo.id}" do %>
                            <%= button_to like_photo_path(photo,'false'), class: 'cardImg__right-footer__btn border-0 bg-transparent' do %>
                                <i class="heart-icon like fa-solid fa-heart"></i>
                                <span><%= like_size %></span>
                            <%end%>
                        <%end%>
                    <%else%>
                        <div class="cardImg__right-footer__btn border-0 bg-transparent">
                            <i class="heart-icon dislike fa-solid fa-heart "></i>
                            <span><%= like_size %></span>
                        </div>
                    <%end%>
                    <span class="cardImg__right-footer__time"><%= photo.created_at %></span>
            </div>

        </div>

    </div>
    <!-- Card -->
    
    <!-- Modal -->
    <div class="modal fade  " id="photo_<%=photo.id%>" tabindex="-1"  aria-labelledby="exampleModalLabel" aria-hidden="true" data-controller="delete">
        <div class="modal-dialog h-75 d-flex align-items-center justify-content-center">
            <div class="modal-content h-90 w-100">
            <div class="modal-header h-10">
                <h5 class="modal-title" id="exampleModalLabel"><%= photo.title %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body h-90">
                <div class="modal-body__img">
                    <img src="<%=photo.source.url%>" alt="" id="modalBodyImg__img" class="w-100 h-100" />
                </div>
                <p id="modal_body__descrip" class="p-2 mt-4 h-15">
                    <%= photo.description %>
                </p>
            </div>
            </div>
        </div>
    </div>  

</div>



